.row.contenttrack-show
  .covermusic-show.col-md-4.col-lg-4
    = image_tag @track.avatar.url, class: 'img-responsive'
  .sound-content-show.col-md-6.col-lg-6
    .name_user
      = find_email(@track.user_id)
    .audio-player-show
      .bbplayer
        %span.bb-rewind
        %span.bb-play
        %span.bb-forward
        %span.bb-trackTime
        %span.bb-trackLength
        %span.bb-trackTitle
        %audio
          %source{:src => "#{@track.audio.url}"}
          %source{:src => "#{@track.audio.url}"}
          %source{:src => "#{@track.audio.url}"}
          %source{:src => "#{@track.audio.url}"}
    .sound-footer-show
      %p.like-delete-show
        = @track.score
        = link_to "<i class='fa fa-heartbeat fa-lg'></i>".html_safe, like_track_path(@track), method: :put
        = link_to "<i class='fa fa-trash-o fa-lg'></i>".html_safe, delete_track_path(@track.id),method: :delete
        = link_to "<i class='fa fa-envelope-o'></i>".html_safe, new_message_path(:user => @track.user_id), method: :post
      .comment_all
        %i.fa.fa-comment-o
          Commentaires:
        %hr
        = render "comments/index"
%script{:src => "https://raw.githubusercontent.com/73rhodes/bbplayer/master/js/bbplayer.js"}
